                android:text="Albumbs Api MVVM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/usersApiClass"
                android:text="Users Api MVVM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/coroutinesClass"
                android:text="Coroutines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


