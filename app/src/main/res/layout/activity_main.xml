                android:id="@+id/customToolbarClass"
                android:text="@string/custom_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/customDrawableButtonsClass"
                android:text="@string/custom_drawable_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/customToastClass"
                android:text="@string/custom_toast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/alertDialogsClass"
                android:text="@string/alert_dialogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
